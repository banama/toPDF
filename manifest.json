{
  
    "name": "Screenshot Extension",
  
    "version": "1.0",
  
    "description": "A simple screenshot extension",
  
    "background": {
  
        "persistent": false,
  
        "scripts": ["background.js"]
  
    },
  
    "content_scripts": [
  
        {
  
            "matches" : ["<all_urls>"],
  
            "js": ["content.js"]
  
        }
  
    ],
  
    "browser_action": {
        
  
        "default_title": "Screenshot"
  
    },
  
    "permissions": ["tabs", "<all_urls>", "activeTab"],
  
    "manifest_version": 2
  
}